<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".DemoActivity">

    <include layout="@layout/planets_background"/>

    <TextView
        android:id="@+id/tv_demo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text"
        android:padding="@dimen/button_padding_large"
        android:layout_margin="@dimen/margin_normal"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/demoActivityTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_demo_download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_demo_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_connect_short"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:background="@drawable/button"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/tv_demo_title"
        app:layout_constraintBottom_toTopOf="@id/btn_demo_connect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_demo_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_connect_short"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:background="@drawable/button"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintTop_toBottomOf="@id/btn_demo_download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>