<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_mercury"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_venus"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/giv_mercury"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/mercury" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_venus"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/ll_mercury"
        app:layout_constraintBottom_toTopOf="@id/ll_moon"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/giv_venus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/venus" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_moon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="64dp"
        app:layout_constraintTop_toBottomOf="@id/ll_venus"
        app:layout_constraintBottom_toTopOf="@id/ll_earth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/giv_moon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/moon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_earth"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_moon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/giv_earth"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/earth"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/piv_mars"
        android:layout_width="2200dp"
        android:layout_height="220dp"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/giv_mars"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/mars"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>